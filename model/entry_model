const mongoose = require("mongoose");
const Schema = mongoose.Schema;

const EntrySchema = new Schema({
  link: {
    type: String,
    required: true,
  },
  genre: [
    {
      type: String,
      required: true,
    },
  ],
  date: {
    type: Date,
    required: false,
  },
  site: {
    type: String,
    required: true,
  },
  caption: {
    type: String,
    required: true,
  },
  cam_details: {
    type: String,
    required: false,
  },
  user: {
    type: Schema.Types.ObjectId,
    ref: "User",
    required: false,
  },
});

module.exports = mongoose.model("image", EntrySchema);
